<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sith3.chatclone.Messages.MessageActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/back"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                app:srcCompat="@drawable/ic_action_arrow_back" />


            <TextView
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appBarLayout"
                android:layout_centerHorizontal="true"
                android:text="Uname"
                android:gravity="center"
                android:textSize="32sp"
                android:textColor="@color/white"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:background="@drawable/catswhatsappbackground"
        tools:listitem="@layout/meassgetext1" />

    <EditText
            android:id="@+id/editText4"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint=" Type your messages"
            android:inputType="textPersonName" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/send"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/editText4"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/editText4"
            android:layout_toRightOf="@+id/editText4"
            android:clickable="true"
            app:fabSize="auto"
            app:srcCompat="@android:drawable/ic_menu_send" />

</RelativeLayout>
