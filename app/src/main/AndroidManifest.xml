<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sith3.chatclone">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User_List.UserList"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Messages.MessageActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity android:name=".Others.Request" />

        <activity android:name=".Post.SendPost" />

        <activity
            android:name=".Post.PostAdapter"
            android:label="Timeline"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Me.Userprofile"
            android:label="@string/title_activity_userprofile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <activity android:name=".Post.Comments"
            android:label="@string/title_activity_main7"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity android:name=".Registration.Registration"
            android:label="@string/title_activity_main8"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity
            android:name=".Friend_Request.AcceptRequest"
            android:label="AcceptRequest"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".TimeLine.TimeLine"
            android:label="TimeLine"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Friends.Friend_List"
            android:label="@string/title_activity_main5"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Me.MeTimeline"
            android:label="@string/title_activity_main9"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity android:name=".Me.Me"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>



    </application>

</manifest>